<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/btn_1"
        app:layout_constraintLeft_toRightOf="@id/btn_2"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_4"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_3"
        app:layout_constraintLeft_toRightOf="@id/btn_3"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_5"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_5"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_7"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_6"
        app:layout_constraintBottom_toBottomOf="@id/btn_5"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_8"
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_5"
        app:layout_constraintLeft_toRightOf="@id/btn_7"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_9"
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_0"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_9"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_space"
        android:text="space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_enter"
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_9"
        app:layout_constraintLeft_toRightOf="@id/btn_space"
        tools:layout_editor_absoluteX="192dp" />


</androidx.constraintlayout.widget.ConstraintLayout>