<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_up"
        android:text="UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_down"
        android:text="DOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_up"
        app:layout_constraintLeft_toRightOf="@id/btn_up" />

    <Button
        android:id="@+id/btn_left"
        android:text="LEFT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_up"
        app:layout_constraintLeft_toRightOf="@id/btn_down"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_right"
        android:text="RIGHT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_up"
        app:layout_constraintLeft_toRightOf="@id/btn_left"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_A"
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_up"/>

    <Button
        android:id="@+id/btn_B"
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_A"
        app:layout_constraintLeft_toRightOf="@id/btn_A"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_C"
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_A"
        app:layout_constraintLeft_toRightOf="@id/btn_B"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_D"
        android:text="D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_A"
        app:layout_constraintLeft_toRightOf="@id/btn_C"
        tools:layout_editor_absoluteX="280dp" />

    <Button
        android:id="@+id/btn_E"
        android:text="E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_A"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_F"
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_E"
        app:layout_constraintLeft_toRightOf="@id/btn_E"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/btn_G"
        android:text="G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_E"
        app:layout_constraintLeft_toRightOf="@id/btn_F"
        tools:layout_editor_absoluteX="192dp" />

    <Button
        android:id="@+id/btn_H"
        android:text="H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btn_E"
        app:layout_constraintLeft_toRightOf="@id/btn_G"
        tools:layout_editor_absoluteX="280dp" />

</androidx.constraintlayout.widget.ConstraintLayout>