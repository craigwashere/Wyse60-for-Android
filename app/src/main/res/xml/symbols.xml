<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/symbol_key_height">

    <Row>
        <Key android:codes="131" android:keyLabel="F1" android:keyEdgeFlags="left"/>
        <Key android:codes="132" android:keyLabel="F2"/>
        <Key android:codes="133" android:keyLabel="F3"/>
        <Key android:codes="134" android:keyLabel="F4"/>
        <Key android:codes="135" android:keyLabel="F5"/>
        <Key android:codes="136" android:keyLabel="F6"/>
        <Key android:codes="137" android:keyLabel="F7"/>
        <Key android:codes="138" android:keyLabel="F8"/>
        <Key android:codes="139" android:keyLabel="F9"/>
        <Key android:codes="140" android:keyLabel="F10"/>
        <Key android:codes="141" android:keyLabel="F11"/>
        <Key android:codes="142" android:keyLabel="F12" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2"/>
        <Key android:codes="51" android:keyLabel="3"/>
        <Key android:codes="52" android:keyLabel="4"/>
        <Key android:codes="53" android:keyLabel="5"/>
        <Key android:codes="54" android:keyLabel="6"/>
        <Key android:codes="55" android:keyLabel="7"/>
        <Key android:codes="56" android:keyLabel="8"/>
        <Key android:codes="57" android:keyLabel="9"/>
        <Key android:codes="48" android:keyLabel="0" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:codes="27"  android:keyLabel="ESC"   android:keyWidth="15%p"  android:keyEdgeFlags="left"/>
        <Key android:codes="-1"  android:keyLabel="SHIFT" android:keyWidth="15%p"  android:isSticky="true"  />
        <Key android:codes="-7" android:keyLabel="CTRL"  android:keyWidth="15%p"  android:isSticky="true" />
        <Key android:codes="-6"  android:keyLabel="ALT"   android:keyWidth="15%p"  android:isSticky="true" android:isModifier="true" />
        <Key android:codes="13"  android:keyIcon="@drawable/sym_keyboard_return" android:keyWidth="15%p"/>
        <Key android:codes="11"  android:keyLabel="↑"     android:keyWidth="15%p" />
        <!-- android:codes="-5" is android's code for delete key -->
        <Key android:codes="127"  android:keyIcon="@drawable/sym_keyboard_delete"   android:keyWidth="15%p"  android:keyEdgeFlags="right" />
    </Row>

    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="ABC"   android:keyWidth="15%p" android:keyEdgeFlags="left" />
        <Key android:codes="9" android:keyIcon="@drawable/tabs" android:keyWidth="15%p" />
        <Key android:codes="32" android:keyLabel="SPACE" android:keyWidth="30%p" android:isRepeatable="true"/>
        <Key android:codes="8"  android:keyLabel="←"     android:keyWidth="15%p" />
        <Key android:codes="10" android:keyLabel="↓"     android:keyWidth="15%p" />
        <Key android:codes="12" android:keyLabel="→"     android:keyWidth="15%p" android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>